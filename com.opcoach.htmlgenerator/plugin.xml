<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="com.opcoach.htmlgenerator.commandMenuGenerate"
            name="generateHtmlMenuCommand">
      </command>
      <command
            id="com.opcoach.htmlgenerator.commandRestaurantGenerate"
            name="generateHtmlRestaurantCommand">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="HtmlMenuGeneratorHandler"
            commandId="com.opcoach.htmlgenerator.commandMenuGenerate">
         <activeWhen>
            <reference
                  definitionId="com.opcoach.htmlgenerator.menutIsSelected">
            </reference>
         </activeWhen>
      </handler>
      <handler
            class="HtmlRestaurantGeneratorHandler"
            commandId="com.opcoach.htmlgenerator.commandRestaurantGenerate">
         <activeWhen>
            <reference
                  definitionId="com.opcoach.htmlgenerator.restaurantIsSelected">
            </reference></activeWhen>
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.ui.popup.any?after=additions">
         <menu
               label="generateHtmlMenuCode">
            <command
                  commandId="com.opcoach.htmlgenerator.commandMenuGenerate"
                  label="Generate"
                  style="push">
               <visibleWhen
                     checkEnabled="false">
                  <reference
                        definitionId="com.opcoach.htmlgenerator.menutIsSelected">
                  </reference>
               </visibleWhen> </command>
         </menu>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.ui.popup.any?after=additions">
         <menu
               label="generateHtmlRestaurantCode">
            <command
                  commandId="com.opcoach.htmlgenerator.commandRestaurantGenerate"
                  label="Generate"
                  style="push">
               <visibleWhen
                     checkEnabled="false">
                  <reference
                        definitionId="com.opcoach.htmlgenerator.restaurantIsSelected">
                  </reference>
               </visibleWhen>
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.core.expressions.definitions">
      <definition
            id="com.opcoach.htmlgenerator.restaurantIsSelected">
         <iterate>
            <instanceof
                  value="com.opcoach.restaurant.MRestaurant">
            </instanceof>
         </iterate>
      </definition>
      <definition
            id="com.opcoach.htmlgenerator.menutIsSelected">
         <iterate>
            <instanceof
                  value="com.opcoach.menu.MMenu">
            </instanceof>
         </iterate>
      </definition>
   </extension>

</plugin>
